<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <script src="https://aframe.io/releases/1.2.0/aframe.min.js"></script>
    <script src="myutils.js"></script>
</head>

<body>
    <a-scene background="color: #5280A7">

        <a-assets>
          <a-asset-item id="leftfoot" src="../piedgauche.glb"></a-asset-item>
          <a-asset-item id="rightfoot" src="../pieddroite.glb"></a-asset-item>

          <img id="bleu" src="./assets/images/bleu.png"></img>
          <img id="jaune" src="./assets/images/jaune.png"></img>
          <img id="rose" src="./assets/images/rose.png"></img>
          <img id="rouge" src="./assets/images/rouge.png"></img>
          <img id="vert" src="./assets/images/vert.png"></img>
          <img id="violet" src="./assets/images/violet.png"></img>

          <img id="ciel" src="./assets/images/ciel.png"></img>
        </a-assets>

        <!-- INSEREZ VOTRE ENVIRONNEMENT, CI-DESSOUS ... -->
        
      <a-cylinder
        src="#bleu"
        position="0 -0.25 0"
        height="0.5"
        radius="0.2"
        rotation="0 0 0">
      </a-cylinder>
  
      <a-cylinder
        src="#jaune"
        position="1 -0.25 0.5"
        height="0.5"
        radius="0.28"
        rotation="0 0 0">
      </a-cylinder>
  
      <a-cylinder
        src="#rose"
        position="0.6 -0.25 1.3"
        height="0.5"
        radius="0.26"
        rotation="0 0 0">
      </a-cylinder>
  
      <a-cylinder
        src="#rouge"
        position="-0.5 -0.25 1.4"
        height="0.5"
        radius="0.24"
        rotation="0 0 0">
      </a-cylinder>
  
      <a-cylinder
        src="#vert"
        position="-1.4 -0.25 0.9"
        height="0.5"
        radius="0.22"
        rotation="0 0 0">
      </a-cylinder>
  
      <a-cylinder
        src="#vert"
        position="-1.6 -0.25 0.2"
        height="0.5"
        radius="0.20"
        rotation="0 0 0">
      </a-cylinder>
  
      <a-cylinder
        src="#vert"
        position="-1.4 -0.25 -0.5"
        height="0.5"
        radius="0.18"
        rotation="0 0 0">
      </a-cylinder>
  
      <a-cylinder
        src="#violet"
        position="-1 -0.25 -1"
        height="0.5"
        radius="0.16"
        rotation="0 0 0">
      </a-cylinder>
  
      <a-cylinder
        src="#bleu"
        position="0 -0.25 -1.5"
        height="0.5"
        radius="0.1"
        rotation="0 0 0">
      </a-cylinder>
  
      <a-sky
        src="#ciel"
      >
      </a-sky>

        <!-- ... JUSQUE CI-DESSUS -->

        <!-- PLAYER -->
        <a-entity id="cameraRig">
            
            <!-- TETE -->
            <a-entity id="tete" camera position="0 1.6 0" 
                    look-controls wasd-controls>
            </a-entity>

            <!-- LEFT HAND -->
            <a-entity id="maingauche" hand-controls="hand: left; handModelStyle: lowPoly; color: #ffcccc">
            </a-entity>

            <!-- RIGHT HAND -->
            <a-entity id="maindroite" hand-controls="hand: right; handModelStyle: lowPoly; color: #ffcccc">
            </a-entity>

            <!-- PIEDS -->
            <a-entity id="piedgauche" gltf-model="#leftfoot" 
                      rotation="-90 0 180"
                      follow-head-rotation="trace: false" follow-hand-position>
            </a-entity>
            <a-entity id="pieddroite" gltf-model="#rightfoot" 
                      rotation="-90 0 180"
                      follow-head-rotation="trace: false" follow-hand-position>
            </a-entity>

        </a-entity>

    </a-scene>

</body>

</html>